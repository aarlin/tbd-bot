{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "noImplicitAny": false,
      "sourceMap": true,
      "outDir": "build",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
        "es2017",
        "esnext.asynciterable"
      ],
      "moduleResolution": "node"
    },
    "exclude": [
      "node_modules"
    ]
  }